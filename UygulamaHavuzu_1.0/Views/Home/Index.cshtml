@{
    ViewData["Title"] = "Home Page";
    Layout = "_OrnekLayout";

}


@model List<UygulamaHavuzu_1._0.Models.ContentModel>;


<style>
    .card:hover {
        box-shadow: -1px 9px 40px -12px #808080;
    }
</style>


<body>


    <div class="container" style="margin-top:50px; ">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg mb-4">
                    <div class="card">

                        <img src="@item.img" class="card-img-top" />
                        <div class="card-body">
                            <div class="card-title">
                                <h5>@item.title</h5>

                            </div>
                            <div class="card-text">
                                <p>@item.text</p>
                            </div>
                            <a class="btn btn-light" asp-controller="@item.kontrol" asp-action="@item.aksiyon"> Go-></a>
                            
                        </div>

                    </div>
                </div>
             }
        </div>

    </div>
</body>

<a class="btn btn-outline-dark" asp-controller="Dondurma" asp-action="kaymak"> gizli buton- > </a>



<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $('.card').hover(
        function () {
            $(this).animate({
                marginTop: "-=1&",
                marginBottom: "+=1&"

            }, 200)
        },
        function () {
            $(this).animate({
                marginTop: "+=1&",
                marginBottom: "-=1&"
            })
        }

    )
</script>

