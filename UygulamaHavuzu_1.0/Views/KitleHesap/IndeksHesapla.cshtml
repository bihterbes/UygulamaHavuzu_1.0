
@{
    ViewData["Title"] = "IndeksHesapla";
    Layout = "_OrnekLayout";
}

<h1>Indeks Hesaplama Sayfası</h1>


<head>
    <title>Vücut Kitle İndeksi Hesaplayıcı</title>


</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center"> Vücut Kitle İndeksi Hesaplayıcı</h2>
                        <form>
                            <div class="form-group">
                                <label for="kilo"> Kilo (kg):</label>
                                <input type="number" class="form-control" id="weight" step="0.01" required>
                            </div>
                            <div class="form-group">
                                <label for="height"> Boy (m):</label>
                                <input type="number" class="form-control" id="height" step="0.01" required>
                            </div>
                            <button type="button" class="btn btn-primary btn-block" id="calculate"> Hesapla</button>
                        </form>
                        <div id="result" class="mt-3"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   

    <script>
        document.getElementById("calculate").addEventListener("click", function () {
            var weight = parseFloat(document.getElementById("weight").value);
            var height = parseFloat(document.getElementById("height").value);

            // Kitle endeksi hesaplama formülü: BMI = ağırlık (kg) / (boy (m) * boy (m))
            var heightInMeters = height / 100.0;
            var bmi = weight / (heightInMeters * heightInMeters);

            // Sonucu BmiResult alanına yazdırma
            document.getElementById("result").innerHTML = "Vücut Kitle İndeksi: " + bmi.toFixed(2);

            // Modelin BmiResult özelliğine atanması
            var modelBmiResult = bmi;
        });
    </script>
</body>



